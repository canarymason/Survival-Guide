= render :template => "/setup/common-elements.haml"

/ Common HTML Elements
%section#common.element-group
  %h1.section-title Common Elements
  -if @headers
    = render :template => "/partials/common/_headers.haml"
  -if @characters
    = render :template => "/partials/common/_characters.haml"
  -if @paragraphs
    = render :template => "/partials/common/_paragraphs.haml"
  -if @links
    = render :template => "/partials/common/_links.haml"
  -if @lists
    = render :template => "/partials/common/_lists.haml"
  -if @pre
    = render :template => "/partials/common/_pre.haml"
/ Phrase-level HTML Elements
%section#phrase-elements.element-group
  %h1.section-title Phrase Elements
  -if @em
    = render :template => "/partials/common/_em.haml"
  -if @strong
    = render :template => "/partials/common/_strong.haml"
  -if @cite
    = render :template => "/partials/common/_cite.haml"
  -if @dfn
    = render :template => "/partials/common/_dfn.haml"
  -if @code
    = render :template => "/partials/common/_code.haml"
  -if @samp
    = render :template => "/partials/common/_samp.haml"
  -if @kbd
    = render :template => "/partials/common/_kbd.haml"
  -if @var
    = render :template => "/partials/common/_var.haml"
  -if @abbr
    = render :template => "/partials/common/_abbr.haml"
  -if @q
    = render :template => "/partials/common/_q.haml"
  -if @others
    = render :template => "/partials/common/_others.haml"

