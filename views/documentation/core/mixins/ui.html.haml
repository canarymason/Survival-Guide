  %div#mixin-tabs.element
    %h2.element-title
      %a.permalink{:href => "#mixin-tabs"}
        :preserve
          tabs
    .extendable-source
      .comment
        &= "create simple tabs from <a> unside <ul>"
        <br/>
        &= "$dir is 'bottom' for standard tabs"
        <br/>
        &= "'top' for hanging tabs"
        <br/>
        &= "assumes placement on UL"
      %pre.scss
        :preserve
          @mixin tabs(
            $dir: top,
            $border-color: $base-color,
            $border-color-active: $white,
            $background-color: $darkgray,
            $background-color-active: $white,
            $spacing: 3px,
            $radius: 3px) {
            $from-the: bottom;
            @if $dir == bottom {
              $from-the: top;
            }
            @include horizontal-list($spacing);
            position: relative;
            li {
              border-\#{$from-the}: 1px solid $border-color;
              margin-top: 1px;
              &.active {
                a {
                  border-\#{$from-the}: 1px solid $border-color-active;
                  background-color: $background-color-active;
                }
              }
              a {
                border: {
                  width: 1px;
                  style: solid;
                  color: $border-color;
                };
                background-color: $background-color;
                border-\#{$from-the}-width: 0;
                position: relative;
                bottom: -0.25em;
                @if $from-the == bottom {
                  @include border-top-radius($radius);
                }
                @else {
                  @include border-bottom-radius($radius);
                }
                &:hover {
                  background-color: $background-color-active;
                  border-\#{$from-the}: 1px solid $border-color-active;
                }
              }
            }
          }
  %div#mixin-drupal-tab-reset.element
    %h2.element-title
      %a.permalink{:href => "#mixin-drupal-tab-reset"}
        :preserve
          drupal-tab-reset
    .extendable-source
      .comment
        &= "remove drupal tab styling"
        <br/>
        &= "apply to <ul>"
      %pre.scss
        :preserve
          @mixin drupal-tab-reset {
            border-bottom: 0 solid transparent;
            li {
              a {
                background-color: transparent;
                border-style: none;
                border-color: transparent;
                border-width: 0;
                float: none;
                position: static;
                bottom: auto;
                padding: 0;
                margin-right: 0;
                &:hover {
                  background-color: transparent;
                  border-color: transparent;
                  border-bottom-color: transparent;
                }
              }
              &.active {
                a {
                  background-color: transparent;
                  border-color: transparent;
                  border-bottom-color: transparent;
                }
              }
            }
          }
  %div#mixin-decending-z-order-tab.element
    %h2.element-title
      %a.permalink{:href => "#mixin-decending-z-order-tab"}
        :preserve
          decending-z-order-tab
    .extendable-source
      .comment
        &= "assumes placement on UL"
      %pre.scss
        :preserve
          @mixin decending-z-order-tab($count: 20) {
            position: relative;
            li {
              position: relative;
              $t: 0;
              $i: $count;
              @while $i > 0 {
                &:nth-child(#{$t}) {
                  z-index: #{$i};
                }
                $t: $t + 1;
                $i: $i - 1;
              }
            }
          }
  %div#mixin-transition-all.element
    %h2.element-title
      %a.permalink{:href => "#mixin-transition-all"}
        :preserve
          transition-all
    .extendable-source
      .comment
        &= "universal transitions"
      %pre.scss
        :preserve
          @mixin transition-all($time: 0.2s, $ease: ease) {
            * {
              @include transition(all $time $ease);
            }
          }
  %div#mixin-dropdown-menu.element
    %h2.element-title
      %a.permalink{:href => "#mixin-dropdown-menu"}
        :preserve
          dropdown-menu
    .extendable-source
      %pre.scss
        :preserve
          @mixin dropdown-menu($padding: false) {
            padding: 0;
            > li {
              @include inline-block-list-item($padding);
              position: relative;
              &:hover{
                ul {
                  display: block;
                }
              }
            }
            ul {
              display: none;
              position: absolute;
              top: 100%;
              left: 0;
              margin-top: 0;
              padding-left: 0;
              padding-right: 0;
              li {
                display: block;
                @if $padding != false {
                  padding-left: $padding;
                  padding-right: $padding;
                }
              }
            }
          }
  %div#mixin-pretty-dropdown-menu.element
    %h2.element-title
      %a.permalink{:href => "#mixin-pretty-dropdown-menu"}
        :preserve
          pretty-dropdown-menu
    .extendable-source
      %pre.scss
        :preserve
          @mixin pretty-dropdown-menu(
              $padding: false,
              $background: false,
              $background-drop: false,
              $hover-color: false
              ) {
            @include dropdown-menu($padding);
            @if $background != false {
              background: $background;
            }
            > li {
              &:hover {
                @if $background-drop != false {
                  background: $background-drop;
                }
              }
            }
            ul {
              @if $background-drop != false {
                background: $background-drop;
              }
              @else {
                @if $background != false {
                  background: $background;
                }
              }
              li:hover {
                @if $hover-color != false {
                  background: $hover-color;
                }
              }
            }
          }
